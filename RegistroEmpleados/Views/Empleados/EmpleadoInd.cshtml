@model DepartamentoViewModel

@{
}

<div class="container flex justify-center items-center mt-20">

    @{
        var empleado = Model;   

    }

    <table class="shadow-2x1 font-[Poppins] border-2 border-cyan-200 w-6/12 overflow-hidden">
        <thead class="text-white">
            <tr class="items-center">

                <th class="py-3 bg-cyan-800">Nombre</th>
                <th class="py-3 bg-cyan-800">Edad</th>
                <th class="py-3 bg-cyan-800">Sexo</th>
                <th class="py-3 bg-cyan-800">Email</th>
                <th class="py-3 bg-cyan-800">Telefono</th>
                <th class="py-3 bg-cyan-800">Departamento</th>

            </tr>
        </thead>

        <tbody class="text-center">

            <tr class="border-solid border-2 border-cyan-200">

                <td class="text-white py-3 px-6">

                    @empleado.Nombre

                </td>

                <td class="text-white py-3 px-6">

                    @empleado.Edad

                </td>

                <td class="text-white py-3 px-6">

                    @empleado.Sexo

                </td>

                <td class="text-white py-3 px-6">

                    @empleado.Email

                </td>

                <td class="text-white py-3 px-6">

                    @empleado.Telefono

                </td>

                <td class="text-white py-3 px-6">

                    @empleado.Departamento

                </td>

            </tr>

        </tbody>

    </table>

</div>

<form class="container-back">

    <button class="boton-back" asp-action="Lista">Regresar</button>

</form>
